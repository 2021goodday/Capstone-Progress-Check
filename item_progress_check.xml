<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/progress_details_background"
        >

        <TextView
            android:id="@+id/tvProjectNameLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#1073ad"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvProjectName1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Company Management System"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/progress_check_background"
            app:layout_constraintTop_toBottomOf="@id/tvProjectNameLabel1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvCategoryLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Category"
            android:textColor="#1073ad"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvProjectName1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvCategory1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ecommerce"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/progress_check_background"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryLabel1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAmountLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Amount"
            android:textColor="#1073ad"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvCategory1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="â‚±100,000.70"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/progress_check_background"
            app:layout_constraintTop_toBottomOf="@id/tvAmountLabel1"
            app:layout_constraintStart_toStartOf="@id/tvAmountLabel1"
            app:layout_constraintEnd_toEndOf="@id/tvAmountLabel1"/>

        <TextView
            android:id="@+id/tvStartupCompanyLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Startup Company"
            android:textColor="#1073ad"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvStartupCompany"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CloudVibe"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/progress_check_background"
            app:layout_constraintTop_toBottomOf="@id/tvStartupCompanyLabel1"
            app:layout_constraintStart_toStartOf="@id/tvStartupCompanyLabel1"
            app:layout_constraintEnd_toEndOf="@id/tvStartupCompanyLabel1"/>

        <TextView
            android:id="@+id/tvStatusLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Status"
            android:textColor="#1073ad"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvStartupCompany"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Pending"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/progress_check_background"
            app:layout_constraintTop_toBottomOf="@id/tvStatusLabel1"
            app:layout_constraintStart_toStartOf="@id/tvStatusLabel1"
            app:layout_constraintEnd_toEndOf="@id/tvStatusLabel1"/>

        <TextView
            android:id="@+id/tvDescriptionLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Description"
            android:textColor="#1073ad"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="This is the project description."
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/progress_check_background"
            app:layout_constraintTop_toBottomOf="@+id/tvDescriptionLabel1"
            app:layout_constraintStart_toStartOf="@+id/tvDescriptionLabel1"
            app:layout_constraintEnd_toEndOf="@+id/tvDescriptionLabel1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
